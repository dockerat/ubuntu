#!/bin/bash
### 使用方法：property set/get key value filename

function getProperty {
  if [ -z "$3" ] && [ -z "${setFilename}" ]; then
    echo "没有设置文件名，退出..."
    exit 1
  fi

  if [ "${setFilename}" ] && [ "$3" ]; then
      echo "文件名是内置命令，退出..."
      exit 1
  else
    if [ "$3" ] && [ ! -f "$3" ]; then
      echo "文件不存在，退出..."
      exit 1
    elif [ "${setFilename}" ] && [ ! -f "${setFilename}" ]; then
      echo "文件中没有找到Key，退出..."
      exit 1
    fi
  fi

  if [ "${setFilename}" ]; then
    file=${setFilename}
  else
    file=$3
  fi

  key=$2
  # shellcheck disable=SC2006
  # shellcheck disable=SC2002
  value=`cat "${file}" | grep "${key}" | cut -d'=' -f2`

  echo "${value}"
}

function checkProperty {
  if [ -z "$3" ] && [ -z "${setFilename}" ]; then
    echo "没有设置文件名，退出..."
    exit 1
  fi

  if [ "${setFilename}" ] && [ "$3" ]; then
      echo "文件名是内置命令，退出..."
      exit 1
  else
    if [ "$3" ] && [ ! -f "$3" ]; then
      echo "文件不存在，退出..."
      exit 1
    elif [ "${setFilename}" ] && [ ! -f "${setFilename}" ]; then
      echo "文件中没有找到Key，退出..."
      exit 1
    fi
  fi

  if [ "${setFilename}" ]; then
    file=${setFilename}
  else
    file=$3
  fi

  key=$(cat "${file}" | grep "$2=" | cut -d'=' -f1)

  echo "${key}"
}

function setProperty {
  if [ -z "$3" ]; then
    echo "没有Value，退出..."
    exit 1
  fi

  if [ -z "$4" ] && [ -z "${setFilename}" ]; then
    echo "没有设置文件名，退出..."
    exit 1
  fi

  if [ "${setFilename}" ] && [ "$4" ]; then
      echo "文件名是内置命令，退出..."
      exit 1
  else
    if [ "$4" ] && [ ! -f "$4" ]; then
      echo "文件不存在，退出..."
      exit 1
    elif [ "${setFilename}" ] && [ ! -f "${setFilename}" ]; then
      echo "文件中没有找到Key，退出..."
      exit 1
    fi
  fi

  if [ "${setFilename}" ]; then
    file=${setFilename}
  else
    file=$4
  fi

  key=$(checkProperty "$1" "$2" "$3")
  if [ ! "${key}" ]; then
    echo "$2=$3" >> "${file}"
  fi

  awk -v pat="^$1=" -v value="$1=$2" '{ if ($0 ~ pat) print value; else print $0; }' "${file}" > "${file}".tmp
  mv "$file".tmp "$file"
}

if [ -z "$1" ]; then
  echo "没有参数，退出..."
  exit 1
fi

if [ -z "$2" ]; then
  echo "没有Key，退出..."
  exit 1
fi

case "$1" in
  get)
    getProperty "$1" "$2" "$3"
    ;;

  check)
    checkProperty "$1" "$2" "$3"
    ;;

  set)
    setProperty "$1" "$2" "$3" "$4"
    ;;

  *)
    echo "使用方法: $0 {set|get|check} key value filename"
    exit 1
esac
